<% function setStyleActive(patch, me) {
    if (patch === me)
        return 'text-white bg-green-600 hover:bg-green-700'
    return `text-gray-600 hover:bg-green-200`
} %>
<header>
    <nav class="font-sans flex flex-col text-center content-center sm:flex-row sm:text-left sm:justify-between py-2 px-6 bg-white shadow sm:items-baseline w-full shadow-lg">
        <div class="mb-2 sm:mb-0 flex flex-row">
            <div class="h-10 w-10 self-center mr-2">
                <img class="h-10 w-10 self-center" src="/images/logo-micoope.png"/>
            </div>
            <div>
                <h2 class="text-3xl text-center text-blue-900 "><b><%- title %></b></h2>
                <p class="text-center text-green-600 uppercase"><%- subtitle %></p>
            </div>
        </div>
        <div class="sm:mb-0 self-center">
            <nav class="absolute md:relative top-16 left-0 md:top-0  md:flex flex-col md:flex-row md:space-x-6 font-semibold w-full md:w-auto bg-white shadow-md rounded-lg md:rounded-none md:shadow-none md:bg-transparent p-6 pt-0 md:p-0"
                 :class="{ 'flex' : mobileMenuOpen , 'hidden' : !mobileMenuOpen}" @click.away="mobileMenuOpen = false">
                <a href="/admin" class="block p-4 rounded-lg <%- setStyleActive(path, '/admin/') %>">Dashboard</a>
                <a href="/admin/votaciones"
                   class="block p-4 rounded-lg <%- setStyleActive(path, '/admin/votaciones') %> ">Votaciones</a>
                <a href="/admin/asistencia"
                   class="block p-4 rounded-lg <%- setStyleActive(path, '/admin/asistencia') %>">Asistencia</a>
                <a href="/admin/configuracion"
                   class="block p-4 rounded-lg <%- setStyleActive(path, '/admin/configuracion') %>">Configuracion</a>
            </nav>
        </div>
    </nav>
</header>