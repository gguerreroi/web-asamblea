    function startVotacion(codvotacion) {
        swal({
            title: "Votaciones",
            text: "Esta a punto de iniciar una votacion, esta seguro?",
            icon: 'warning',
            dangerMode: true,
            buttons: {
                cancel: "Cancelar",
                delete: "Iniciar"
            }
        }).then(function(resp){
            if (resp){
                $.ajax({
                    url: `${URL_API}/votaciones/${codvotacion}`,
                    method: 'post'
                }).then(resvo => {
                    console.log(resvo)
                    swal({
                        title: 'Votaciones',
                        text: 'Votacion iniciada con exito',
                        icon: 'success'
                    })
                    tbvotaciones.ajax.reload(null, false)
                })
            }
        })

    }

    function stopVotacion(codvotacion) {
        swal({
            title: "Votaciones",
            text: "Esta a punto de iniciar una votacion, esta seguro?",
            icon: 'warning',
            dangerMode: true,
            buttons: {
                cancel: "Cancelar",
                delete: "Detener"
            }
        }).then(function(resp){
            if (resp){
                $.ajax({
                    url: `${URL_API}/votaciones/${codvotacion}`,
                    method: 'put'
                }).then(resvo => {
                    console.log(resvo)
                    swal({
                        title: 'Votaciones',
                        text: 'Se ha detenido la votacion',
                        icon: 'success'
                    })
                    tbvotaciones.ajax.reload(null, false)
                })
            }
        })
    }

